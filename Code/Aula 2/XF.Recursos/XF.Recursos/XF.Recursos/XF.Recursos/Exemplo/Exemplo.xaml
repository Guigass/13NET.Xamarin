<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.Recursos.Exemplo.Exemplo"
             xmlns:exemplo="clr-namespace:XF.Recursos.Exemplo">

    <ContentPage.BindingContext>
        <exemplo:ExemploViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Clique" Command="{Binding EventoOK}"></Button>
            <Button Text="Clique 2" Command="{Binding EventoAdicionar}" CommandParameter="."></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>